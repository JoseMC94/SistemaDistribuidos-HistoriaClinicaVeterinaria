    @section scripts{
        <script>
        $(function () {
            $("#btnConsultar").click(function () {
                $.ajax({
                    url: "@Url.Action("ConsultarDuenio", "Home")",
                    data: { dni: $("#txtdni").val()},
                    success: function (ret) {
                        $("#lblResultado").text(ret);
                    }
                });
            });
            $("#btnRegistrar").click(function () {
                $.ajax({
                    url: "@Url.Action("RegistrarDuenio", "Home")",
                    data: { dni: $("#txtdni2").val(), nombre: $("#txtnombre").val(), apellido: $("#txtapellido").val(), direccion: $("#txtdireccion").val(), telefono: $("#txttelefono").val() },
                    success: function (ret) {
