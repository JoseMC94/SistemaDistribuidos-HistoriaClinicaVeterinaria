
<form class="container formu" class="form-horizontal" id="formulario" >
    <br /><br />
    <h1>Buscar Dueño</h1>

    
    <div class="form-group">
        <label class="col-lg-3 control-label">DNI</label>
        <div class="col-lg-8">
            <input class="form-control" type="email" id="txtdni" value="" placeholder="DNI" />
        </div>
    </div><br />
    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-8">
            <button  id="btnConsultar" type="button" class="btn btn-primary">Entrar</button>
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-lg-3 control-label" id="lblResultado"></label>
    </div><br />
</form>    


<form class="container" class="form-horizontal">
    <br /><br />
    <h1>Registrar Dueño Dueño</h1>
    <br />

   
    <div class="form-group">
        <label class="col-lg-3 control-label">DNI</label>
        <div class="col-lg-8">
            <input class="form-control" type="email" id="txtdni2"  placeholder="DNI" />
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-lg-3 control-label">Nombre</label>
        <div class="col-lg-8">
            <input class="form-control" type="email" id="txtnombre" value="" placeholder="Nombre" />
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-lg-3 control-label">Apellido</label>
        <div class="col-lg-8">
            <input class="form-control" type="email" id="txtapellido" value="" placeholder="Apellido" />
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-lg-3 control-label">Direccion</label>
        <div class="col-lg-8">
            <input class="form-control" type="email" id="txtdireccion" value="" placeholder="Direccion" />
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-lg-3 control-label">Telefono</label>
        <div class="col-lg-8">
            <input class="form-control" type="email" id="txttelefono" value="" placeholder="Telefono" />
        </div>
    </div><br />
    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-8">
            <button id="btnRegistrar" type="button" class="btn btn-primary">Entrar</button>
        </div>
    </div><br />
    <div class="form-group">
        <label class="col-lg-3 control-label" id="lblResultado1"></label>
    </div><br />
</form>  




